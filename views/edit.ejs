<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit File</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");

      * {
        font-family: "Poppins", sans-serif;
      }

      body {
        background: linear-gradient(
          135deg,
          #1a1a2e 0%,
          #16213e 50%,
          #0f3460 100%
        );
        min-height: 100vh;
        overflow-x: hidden;
      }

      .gradient-text {
        background: linear-gradient(90deg, #00dbde 0%, #fc00ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .card-glow {
        box-shadow: 0 0 25px rgba(66, 153, 225, 0.3);
        transition: all 0.4s ease;
      }

      .card-glow:hover {
        box-shadow: 0 0 35px rgba(66, 153, 225, 0.5);
      }

      .form-input {
        background: rgba(24, 24, 27, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(75, 85, 99, 0.3);
        transition: all 0.3s ease;
      }

      .form-input:focus {
        background: rgba(24, 24, 27, 0.9);
        border-color: rgba(59, 130, 246, 0.7);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
      }

      .btn-primary {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .btn-primary:hover {
        background: linear-gradient(90deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 7px 15px rgba(102, 126, 234, 0.4);
      }

      .btn-secondary {
        background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
        transition: all 0.3s ease;
      }

      .btn-secondary:hover {
        background: linear-gradient(90deg, #f5576c 0%, #f093fb 100%);
        transform: translateY(-2px);
        box-shadow: 0 7px 15px rgba(245, 87, 108, 0.4);
      }

      .btn-danger {
        background: linear-gradient(90deg, #ff5858 0%, #f09819 100%);
        transition: all 0.3s ease;
      }

      .btn-danger:hover {
        background: linear-gradient(90deg, #f09819 0%, #ff5858 100%);
        transform: translateY(-2px);
        box-shadow: 0 7px 15px rgba(255, 88, 88, 0.4);
      }

      .btn-primary:active,
      .btn-secondary:active,
      .btn-danger:active {
        transform: translateY(0);
      }

      .btn-primary::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 5px;
        height: 5px;
        background: rgba(255, 255, 255, 0.5);
        opacity: 0;
        border-radius: 100%;
        transform: scale(1, 1) translate(-50%);
        transform-origin: 50% 50%;
      }

      .btn-primary:focus:not(:active)::after {
        animation: ripple 1s ease-out;
      }

      @keyframes ripple {
        0% {
          transform: scale(0, 0);
          opacity: 0.5;
        }
        20% {
          transform: scale(25, 25);
          opacity: 0.3;
        }
        100% {
          opacity: 0;
          transform: scale(40, 40);
        }
      }

      .fade-in {
        animation: fadeIn 0.8s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .slide-in {
        animation: slideIn 0.6s ease-out;
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateX(-30px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .floating {
        animation: floating 6s ease-in-out infinite;
      }

      @keyframes floating {
        0% {
          transform: translate(0, 0px);
        }
        50% {
          transform: translate(0, 15px);
        }
        100% {
          transform: translate(0, -0px);
        }
      }

      .bg-pattern {
        background-image: radial-gradient(
            circle at 25px 25px,
            rgba(255, 255, 255, 0.05) 2%,
            transparent 40%
          ),
          radial-gradient(
            circle at 75px 75px,
            rgba(255, 255, 255, 0.05) 2%,
            transparent 40%
          );
        background-size: 100px 100px;
      }

      .text-highlight {
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(59, 130, 246, 0.2) 50%,
          transparent 100%
        );
        padding: 2px 8px;
        border-radius: 4px;
      }

      .pulse {
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0% {
          box-shadow: 0 0 0 0 rgba(66, 153, 225, 0.7);
        }
        70% {
          box-shadow: 0 0 0 10px rgba(66, 153, 225, 0);
        }
        100% {
          box-shadow: 0 0 0 0 rgba(66, 153, 225, 0);
        }
      }

      .editor-header {
        background: linear-gradient(
          90deg,
          rgba(59, 130, 246, 0.1) 0%,
          rgba(139, 92, 246, 0.1) 100%
        );
        border-radius: 12px 12px 0 0;
        padding: 12px 20px;
        border-bottom: 1px solid rgba(75, 85, 99, 0.3);
      }

      .editor-footer {
        background: linear-gradient(
          90deg,
          rgba(59, 130, 246, 0.05) 0%,
          rgba(139, 92, 246, 0.05) 100%
        );
        border-radius: 0 0 12px 12px;
        padding: 10px 20px;
        border-top: 1px solid rgba(75, 85, 99, 0.2);
      }

      .char-counter {
        background: rgba(24, 24, 27, 0.7);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        border: 1px solid rgba(75, 85, 99, 0.3);
      }

      .file-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        width: 50px;
        height: 60px;
        border-radius: 6px 10px 10px 6px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      }

      .file-icon::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 15px;
        height: 15px;
        background: rgba(255, 255, 255, 0.2);
        border-bottom-left-radius: 6px;
      }

      .file-icon::after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 15px 15px 0;
        border-color: transparent #1a1a2e transparent transparent;
      }
    </style>
  </head>

  <body class="min-h-screen flex items-center justify-center p-6 bg-pattern">
    <!-- Floating Elements -->
    <div
      class="floating absolute top-10 left-10 w-20 h-20 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 opacity-10 blur-xl"
    ></div>
    <div
      class="floating absolute top-1/4 right-20 w-16 h-16 rounded-full bg-gradient-to-r from-pink-500 to-red-500 opacity-10 blur-xl"
      style="animation-delay: 1s"
    ></div>
    <div
      class="floating absolute bottom-20 left-1/4 w-24 h-24 rounded-full bg-gradient-to-r from-green-400 to-blue-500 opacity-10 blur-xl"
      style="animation-delay: 2s"
    ></div>

    <div
      class="bg-zinc-800/80 rounded-3xl shadow-2xl p-8 max-w-3xl w-full space-y-8 card-glow fade-in"
    >
      <!-- Header with File Icon -->
      <div class="flex flex-col items-center space-y-4">
        <div class="file-icon">
          <i class="fas fa-file-edit text-white text-xl"></i>
        </div>
        <div class="text-center">
          <h1 class="text-3xl sm:text-4xl font-bold gradient-text slide-in">
            Edit File
          </h1>
          <p class="text-zinc-400 mt-2">
            Editing: <span class="text-highlight"><%= oldFilename %></span>
          </p>
        </div>
      </div>

      <form action="/update" method="POST" class="flex flex-col gap-6">
        <input type="hidden" name="oldFilename" value="<%= oldFilename %>" />

        <!-- File Name -->
        <div class="space-y-2">
          <label class="block text-zinc-300 font-medium flex items-center">
            <i class="fas fa-heading mr-2 text-blue-400"></i> File Name
          </label>
          <input
            type="text"
            name="newFilename"
            value="<%= oldFilename %>"
            class="form-input p-4 rounded-xl w-full text-zinc-200 placeholder-zinc-400 focus:outline-none transition-all"
            required
          />
        </div>

        <!-- File Content -->
        <div class="space-y-2">
          <div class="flex justify-between items-center">
            <label class="block text-zinc-300 font-medium flex items-center">
              <i class="fas fa-file-lines mr-2 text-blue-400"></i> File Content
            </label>
            <div class="char-counter text-zinc-400" id="charCounter">
              <span id="charCount">0</span> characters
            </div>
          </div>

          <div class="rounded-xl overflow-hidden border border-zinc-700">
            <div class="editor-header">
              <div class="flex items-center text-zinc-300 text-sm">
                <i class="fas fa-code mr-2"></i>
                <span>Editing content</span>
              </div>
            </div>

            <textarea
              name="details"
              id="fileContent"
              rows="12"
              class="form-input p-5 w-full text-zinc-200 placeholder-zinc-400 focus:outline-none transition-all resize-none border-0"
              required
            >
<%= filedata %></textarea
            >

            <div
              class="editor-footer flex justify-between items-center text-sm text-zinc-400"
            >
              <div class="flex items-center">
                <i class="fas fa-keyboard mr-1"></i>
                <span>Plain Text</span>
              </div>
              <div class="flex items-center">
                <i class="fas fa-clock mr-1"></i>
                <span>Last saved: Never</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row justify-between gap-4 pt-4">
          <div class="flex flex-col sm:flex-row gap-4">
            <button
              type="submit"
              class="btn-primary text-white px-6 py-3 rounded-xl font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-all flex items-center justify-center pulse"
            >
              <i class="fas fa-save mr-2"></i> Save Changes
            </button>
            <a
              href="/file/<%= oldFilename %>"
              class="btn-secondary text-white px-6 py-3 rounded-xl font-semibold focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-all text-center flex items-center justify-center"
            >
              <i class="fas fa-eye mr-2"></i> Preview
            </a>
          </div>

          <a
            href="/"
            class="text-zinc-400 hover:text-white px-4 py-3 rounded-xl font-medium hover:bg-zinc-700/50 transition-all text-center flex items-center justify-center"
          >
            <i class="fas fa-arrow-left mr-2"></i> Back to Home
          </a>
        </div>
      </form>
    </div>

    <!-- Toast Notification -->
    <div
      id="toast"
      class="fixed bottom-4 right-4 bg-emerald-600 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-16 transition-transform duration-300 opacity-0 flex items-center"
    >
      <i class="fas fa-check-circle mr-2"></i>
      <span>Changes saved successfully!</span>
    </div>

    <script>
      // Character counter
      document.addEventListener("DOMContentLoaded", function () {
        const textarea = document.getElementById("fileContent");
        const charCount = document.getElementById("charCount");

        // Set initial count
        charCount.textContent = textarea.value.length;

        // Update count on input
        textarea.addEventListener("input", function () {
          charCount.textContent = this.value.length;
        });

        // Add animation to form on load
        const formInputs = document.querySelectorAll(".form-input");
        formInputs.forEach((input, index) => {
          input.style.animationDelay = `${index * 0.1}s`;
          input.classList.add("fade-in");
        });

        // Add focus effect to textarea
        textarea.addEventListener("focus", function () {
          this.parentElement.parentElement.querySelector(
            ".editor-header"
          ).style.background =
            "linear-gradient(90deg, rgba(59, 130, 246, 0.2) 0%, rgba(139, 92, 246, 0.2) 100%)";
        });

        textarea.addEventListener("blur", function () {
          this.parentElement.parentElement.querySelector(
            ".editor-header"
          ).style.background =
            "linear-gradient(90deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%)";
        });

        // Form submission effect
        const form = document.querySelector("form");
        form.addEventListener("submit", function (e) {
          const submitBtn = this.querySelector('button[type="submit"]');
          submitBtn.innerHTML =
            '<i class="fas fa-spinner fa-spin mr-2"></i> Saving...';
          submitBtn.disabled = true;

          // Simulate API call delay
          setTimeout(() => {
            showToast();
          }, 1500);
        });
      });

      // Show toast notification
      function showToast() {
        const toast = document.getElementById("toast");
        toast.classList.remove("translate-y-16", "opacity-0");
        toast.classList.add("translate-y-0", "opacity-100");

        setTimeout(() => {
          toast.classList.remove("translate-y-0", "opacity-100");
          toast.classList.add("translate-y-16", "opacity-0");
        }, 3000);
      }

      // Add keyboard shortcut for saving (Ctrl+S)
      document.addEventListener("keydown", function (e) {
        if ((e.ctrlKey || e.metaKey) && e.key === "s") {
          e.preventDefault();
          document
            .querySelector("form")
            .dispatchEvent(new Event("submit", { cancelable: true }));
        }
      });
    </script>
  </body>
</html>
